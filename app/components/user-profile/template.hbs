<div class="white-background-div col-xs-12">
  <h3>Profile Information</h3>

  {{#if isAuthenticated}}
    <h1>{{credentials.givenname}} {{credentials.surname}}</h1>

    <br />
    <br />

    <!-- OTHER PROFILE CONTENT  -->
    <div class="col-xs-8 col-offset-xs-2">
      <table class="table table-condensed">
        <tbody>
          <tr>
            <th scope="row">User ID</th>
            <td>{{credentials.id}}</td>
          </tr>
          <tr>
            <th scope="row">First Name</th>
            <td>{{credentials.givenname}}</td>
          </tr>
          <tr>
            <th scope="row">Last Name</th>
            <td>{{credentials.surname}}</td>
          </tr>
          <tr>
            <th scope="row">Email Address</th>
            <td>{{credentials.email}}</td>
          </tr>
        </tbody>
      </table>
      <br />

      <h3>Friend Requests</h3>

      <h4>Awaiting Approval</h4>

      <div class="col-xs-12"
           syle="margin: 15px;">
        {{#each user.requests as |request|}}
          {{person-profile
            user=request.user
            profile=true
            awaiting=true
            pending=false
            friend=false
            hidePerson="hidePerson"
            removeFriend="removeFriend"
            cancelRequest="cancelRequest"
            acceptRequest="acceptRequest"
            declineRequest="declineRequest"}}
        {{/each}}
      </div>

      <br />

      <h4>Pending</h4>

      <div class="col-xs-12"
           syle="margin: 15px;">
        {{#each user.requests as |request|}}
          {{person-profile
            user=request.user
            profile=true
            awaiting=false
            pending=true
            friend=false
            hidePerson="hidePerson"
            removeFriend="removeFriend"
            cancelRequest="cancelRequest"
            acceptRequest="acceptRequest"
            declineRequest="declineRequest"}}
        {{/each}}
      </div>

      <br />

      <h3>Friends</h3>

      <div class="col-xs-12"
           syle="margin-top: 15px; margin-bottom: 15px;">
        {{#each user.friends as |friend|}}
          {{person-profile
            user=friend.user
            profile=true
            awaiting=false
            pending=false
            friend=true
            hidePerson="hidePerson"
            removeFriend="removeFriend"
            cancelRequest="cancelRequest"
            acceptRequest="acceptRequest"
            declineRequest="declineRequest"}}
        {{/each}}
      </div>

      <br />

      <button type="submit" class="btn btn-primary" {{action "edit"}}>
        Edit Profile
      </button>

      <button type="submit" class="btn btn-danger" {{action "delete"}}>
        Delete Account
      </button>
    </div>
  {{/if}}
</div>
