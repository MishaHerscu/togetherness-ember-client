<div class="event-card col-xs-5">
  <div class="col-xs-12">
    <button type="button"
            class="close tile-close-button"
            {{action "closeAttraction"}}>&times;
    </button>
  </div>
  <div class="col-xs-12">
    <div class="col-xs-8">
      <h4>{{attraction.title}}</h4>
    </div>
    <img class="col-xs-4" src={{attraction.medium_image_url}}>
  </div>
  <h6>Details</h6>
  <table class="table table-bordered">
    <tbody>
      <tr>
        <td>Categories</td>
        <td>
          <ul>
            {{#each attraction.attraction_categories as |attraction_category|}}
              <li><h5>{{attraction_category.category.label}}</h5></li>
            {{/each}}
          </ul>
        </td>
      </tr>
      <tr>
        <td width="25%">City</td>
        <td>{{attraction.city_name}}</td>
      </tr>
      <tr>
        <td width="25%">Date</td>
        <td>{{attraction.event_date}}</td>
      </tr>
      <tr>
        <td width="25%">Start Time</td>
        <td>{{attraction.event_time}}</td>
      </tr>
      <tr>
        <td width="25%">Venue</td>
        <td><a href={{attraction.venue_url}}>{{attraction.venue_name}}</a></td>
      </tr>
      <tr>
        <td width="25%">Address</td>
        <td>{{attraction.venue_address}}</td>
      </tr>
      <tr>
        <td width="25%">Description</td>
        <td class="event-card-more">
          <span>Details</span>
          <div>
            {{attraction.description}}
          </div>
        </td>
      </tr>
    </tbody>
  </table>

  <button class="btn btn-success"
          {{action "likeAttraction"}}>
    Yes!
  </button>

  <button class="btn btn-danger"
          {{action "dislikeAttraction"}}>
    Meh
  </button>
</div>
