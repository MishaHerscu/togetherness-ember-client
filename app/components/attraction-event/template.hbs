<div class="event-card col-xs-5">
  <div class="col-xs-12">
    <h4 class="col-xs-6">{{attraction.title}}</h4>
    <img class="col-xs-6" src={{attraction.medium_image_url}}>
  </div>
  <h6>Details</h6>
  <table class="table table-bordered">
    <tbody>
      <tr>
        <td>City</td>
        <td>{{attraction.city_name}}</td>
      </tr>
      <tr>
        <td>Date</td>
        <td>{{attraction.event_date}}</td>
      </tr>
      <tr>
        <td>Start Time</td>
        <td>{{attraction.event_time}}</td>
      </tr>
      <tr>
        <td>Venue</td>
        <td><a href={{attraction.venue_url}}>{{attraction.venue_name}}</a></td>
      </tr>
      <tr>
        <td>Address</td>
        <td>{{attraction.venue_address}}</td>
      </tr>
      <!-- <tr>
        <td>Description</td>
        <td>{{attraction.description}}</td>
      </tr> -->
    </tbody>
  </table>

  <button class="btn btn-success"
          {{action "likeAttraction"}}>
    Yes!
  </button>

  <button class="btn btn-danger"
          {{action "dislikeAttraction"}}>
    Meh
  </button>
</div>
