<h3>Edit Adventure</h3>

<br />
<br />

<div class="white-background-div">
  <div class="col-xs-12">
    <div class="col-xs-11">
      <h4>Adventure in {{trip.city.name}}</h4>
    </div>
    <div class="col-xs-1">
      <button type="button"
              class="close tile-close-button"
              {{action "cancel"}}>&times;
      </button>
    </div>
  </div>

  <div class="col-xs-12">
    <hr>
  </div>

  <form {{action "submit" on="submit"}}>

    <label>
      Adventure Name
    </label>
      {{input
        placeholder="Best Adventure Ever!!!"
        class="input-group form-control"
        required="true"
        value=trip.name}}

    <br />

    <label>
      Notes
    </label>
      {{textarea
        rows="3"
        placeholder="Every good adventure starts with..."
        class="input-group form-control"
        required="true"
        value=trip.notes}}

    <br />

    <label>
      Start date:
    </label>
      {{input
        type="date"
        class="input-group form-control"
        required="true"
        value=trip.start_date}}

    <br />

    <label>
      End date:
    </label>
      {{input
        type="date"
        class="input-group form-control"
        required="true"
        value=trip.end_date}}

    <br />

    <button class="btn btn-md btn-primary"
            type="submit">
      Save
    </button>
    <button class="btn btn-md btn-danger"
            {{action "cancel"}}>
      Cancel
    </button>

    <br />
  </form>
</div>
