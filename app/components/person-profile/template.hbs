<div class="col-xs-5 person-profile">

    <div class="col-xs-12" style="margin-bottom: 5px;">
      {{#unless profile}}
        <button type="button"
                class="close tile-close-button"
                style="padding: 0px; margin: 0px;"
                {{action "closePerson"}}>&times;
        </button>
      {{/unless}}
    </div>

    <div class="col-xs-12">

      <div class="col-xs-3"
           style="font-weight: 100;
                  margin-bottom: 10px;
                  border: 0.1px solid #CCC;
                  padding: 10px;
                  height: 75px;
                  width: 75px;
                  text-align: center">
        Profile Picture
      </div>

      <div class="col-xs-6" style="text-align: left;">
        <h4 class="col-xs-12">{{user.fullName}}</h4>
        <div class="col-xs-12"
             style="font-weight: 300;
                    text-align: left;">
          <a href="mailto:{{user.email}}" >
            {{user.email}}
          </a>
        </div>
      </div>

      <!-- PEOPLE ROUTE -->
      {{#unless profile}}
        {{#unless user.self}}
          {{#if user.requested}}
            <div class="person-buttons col-xs-3"
                 style="margin-right: 5px;">
              <div style="text-align: right;">
                <button class="btn btn-md btn-warning"
                        {{action "unRequestFriend"}}
                        style="text-align: center;
                               align: center;
                               margin-top: 5px;">
                  Requested!
                </button>
              </div>
            </div>
          {{else}}
            <div class="person-buttons col-xs-3"
                 style="margin-right: 5px;">
              <div style="text-align: right;">
                <button class="btn btn-md btn-primary"
                        {{action "requestFriend"}}
                        style="text-align: center;
                               align: center;
                               margin-top: 5px;">
                  Request
                </button>
              </div>
            </div>
          {{/if}}
        {{else}}
          <div class="person-buttons col-xs-3"
               style="margin-right: 5px;
                      font-weight: 700;">
            <div style="text-align: right;">
              <button class="btn btn-md btn-success"
                      {{action "viewProfile"}}
                      style="text-align: center;
                             align: center;
                             margin-top: 5px;">
                View Profile
              </button>
            </div>
          </div>
        {{/unless}}
      {{else}}
        {{#if friend}}
          <div class="person-buttons col-xs-3"
               style="margin-right: 5px;
                      font-weight: 700;">
            <div style="text-align: right;">
              <button class="btn btn-md btn-danger"
                      {{action "removeFriend"}}
                      style="text-align: center;
                             align: center;
                             margin-top: 5px;">
                Remove Friend
              </button>
            </div>
          </div>
        {{/if}}
      {{/unless}}

      <!-- PROFILE ROUTE -->
      {{#if profile}}

      {{#if awaiting}}
        <div style="text-align: right;">
          <button class="btn btn-md btn-warning"
                  {{action "cancelRequest"}}
                  style="text-align: center;
                         align: center;
                         margin-top: 5px;">
            Cancel
          </button>
        </div>
      {{/if}}

      {{#if pending}}
        <div style="text-align: right;">
          <button class="btn btn-md btn-success"
                  {{action "acceptRequest"}}
                  style="text-align: center;
                         align: center;
                         margin-top: 5px;">
            Accept
          </button>
          <button class="btn btn-md btn-danger"
                  {{action "declineRequest"}}
                  style="text-align: center;
                         align: center;
                         margin-top: 5px;">
            Reject
          </button>
        </div>
      {{/if}}

      {{#if friend}}
        <div style="text-align: right;">
          <button class="btn btn-md btn-danger"
                  {{action "removeFriend"}}
                  style="text-align: center;
                         align: center;
                         margin-top: 5px;">
            Remove Friend
          </button>
        </div>
      {{/if}}

      {{/if}}




  </div>

</div>
