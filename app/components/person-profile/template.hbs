<div class="col-xs-5 person-profile">

    <div class="col-xs-12" style="margin-bottom: 5px;">

      <button type="button"
              class="close tile-close-button"
              style="padding: 0px; margin: 0px;"
              {{action "closePerson"}}>&times;
      </button>
    </div>

    <div class="col-xs-12">

      <div class="col-xs-3"
           style="font-weight: 700;
                  margin-bottom: 10px;
                  border: 1px solid #888;
                  padding: 10px;
                  height: 75px;
                  width: 75px;
                  text-align: center">
        Profile Picture
      </div>

      <div class="col-xs-6" style="text-align: left;">
        <h4 class="col-xs-12">{{user.fullName}}</h4>
        <div class="col-xs-12"
             style="font-weight: 300;
                    text-align: left;">
          <a href="mailto:{{user.email}}" >
            {{user.email}}
          </a>
        </div>
      </div>

      {{#unless user.self}}
        {{#if user.requested}}
          <div class="person-buttons col-xs-3"
               style="margin-right: 10px;">
            <div style="text-align: right;">
              <button class="btn btn-md btn-warning disabled"
                      style="text-align: center;
                             align: center;
                             margin-top: 5px;">
                Requested!
              </button>
            </div>
          </div>
        {{else}}
          <div class="person-buttons col-xs-3"
               style="margin-right: 10px;">
            <div style="text-align: right;">
              <button class="btn btn-md btn-primary"
                      {{action "requestFriend"}}
                      style="text-align: center;
                             align: center;
                             margin-top: 5px;">
                Request Friend
              </button>
            </div>
          </div>
        {{/if}}
      {{else}}
        <div class="person-buttons col-xs-3"
             style="margin-right: 10px;
                    font-weight: 700;">
          <div style="text-align: right;">
            <button class="btn btn-md btn-success"
                    {{action "viewProfile"}}
                    style="text-align: center;
                           align: center;
                           margin-top: 5px;">
              View Profile
            </button>
          </div>
        </div>
      {{/unless}}

  </div>
</div>
