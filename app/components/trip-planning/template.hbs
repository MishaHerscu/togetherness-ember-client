<h3>Create Adventure!</h3>

<br />
<br />

<div class="white-background-div col-xs-12">
  <div class="col-xs-12">
    <div class="col-xs-12">
      <div class="col-xs-11">
        <h4>New Adventure in {{attraction.city_name}}</h4>
        <p><ul><li>Remember to check out <strong>{{attraction.title}} on {{attraction.event_date}}</strong></li></ul></p>
      </div>
      <div class="col-xs-1">
        <button type="button"
                class="close tile-close-button"
                {{action "cancel"}}>&times;
        </button>
      </div>
    </div>

    <br />

    <div class="col-xs-12">
      <hr>
    </div>

    <br />

    <div class="col-xs-12">
      <form {{action "submit" on="submit"}}>

        <div class="col-xs-6">
          <label>
            Name Your Adventure!
          </label>
            {{input
              placeholder="Best Adventure Ever!!!"
              class="input-group form-control"
              required="true"
              value=tripData.name}}
        </div>

        <br />

        <div class="col-xs-10" style="margin-top:5px;">
          <label>
            Notes
          </label>
            {{textarea
              rows="3"
              placeholder="Every good adventure starts with..."
              class="input-group form-control"
              required="true"
              value=tripData.notes}}
        </div>

        <br />

        <div class="col-xs-5" style="margin-top:5px;">
          <label>
            Start date:
          </label>
            {{input
              type="date"
              class="input-group form-control"
              required="true"
              value=tripData.start_date}}
        </div>

        <div class="col-xs-5" style="margin-top:5px;">
          <label>
            End date:
          </label>
            {{input
              type="date"
              class="input-group form-control"
              required="true"
              value=tripData.end_date}}
        </div>

        <div class="col-xs-12">
          <hr>
        </div>

        <div class="col-xs-12">
          <button class="btn btn-md btn-primary"
                  type="submit">
            Create!
          </button>

          <button class="btn btn-md btn-danger"
                  {{action "cancel"}}>
            Cancel
          </button>
        </div>

      </form>
    </div>
  </div>
</div>
